<p id="notice"><%= notice %></p>

<h1>Customer Staffs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer code</th>
      <th>Customer staff</th>
      <th>Staff first name</th>
      <th>Staff last name</th>
      <th>Staff email</th>
      <th>Staff phone</th>
      <th>Department</th>
      <th>Staff post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_staffs.each do |customer_staff| %>
      <tr>
        <td><%= customer_staff.customer_code %></td>
        <td><%= customer_staff.customer_staff_id %></td>
        <td><%= customer_staff.staff_first_name %></td>
        <td><%= customer_staff.staff_last_name %></td>
        <td><%= customer_staff.staff_email %></td>
        <td><%= customer_staff.staff_phone %></td>
        <td><%= customer_staff.department %></td>
        <td><%= customer_staff.staff_post %></td>
        <td><%= link_to 'Show', customer_staff %></td>
        <td><%= link_to 'Edit', edit_customer_staff_path(customer_staff) %></td>
        <td><%= link_to 'Destroy', customer_staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

