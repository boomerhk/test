<p id="notice"><%= notice %></p>

<h1>Temperatures</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Datetime</th>
      <th>Temperature</th>
      <th>Rack no</th>
      <th>Min temp</th>
      <th>Max temp</th>
      <th>Low warnlv</th>
      <th>High warnlv</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temperatures.each do |temperature| %>
      <tr>
        <td><%= temperature.date %></td>
        <td><%= temperature.time %></td>
        <td><%= temperature.datetime %></td>
        <td><%= temperature.temperature %></td>
        <td><%= temperature.rack_no %></td>
        <td><%= temperature.min_temp %></td>
        <td><%= temperature.max_temp %></td>
        <td><%= temperature.low_warnlv %></td>
        <td><%= temperature.high_warnlv %></td>
        <td><%= temperature.timestamp %></td>
        <td><%= link_to 'Show', temperature %></td>
        <td><%= link_to 'Edit', edit_temperature_path(temperature) %></td>
        <td><%= link_to 'Destroy', temperature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

