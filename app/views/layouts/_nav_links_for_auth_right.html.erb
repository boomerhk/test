<% if user_signed_in? %>
    <li><%= link_to Time.now.strftime("%H:%M - %d %B %Y - %A") %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hi, <%= current_user.email %><span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_registration_path do %>
            <span class="glyphicon glyphicon-pencil"></span> Account Setting
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, :method=>'delete' do %>
          <span class="glyphicon glyphicon-log-out"></span> Sign Out
          <% end %>
        </li>
      </ul>
    </li>
<% else %>
    <li><%= link_to 'Sign in', new_user_session_path %></li>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
